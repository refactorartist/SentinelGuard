{
    "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
    "packages": [
      "rustup@latest"
    ],
    "shell": {
      "init_hook": [
        "echo 'Welcome to devbox!' > /dev/null",
        "rustup default stable"
      ],
      "scripts": {
        "tests": [
          "devbox run start",
          "cargo test",
          "devbox run shutdown"
        ],
        "app": [
          "devbox run start",
          "cargo run",
          "devbox run shutdown"
        ],
        "start": [
          "docker compose up -d"
        ],
        "shutdown": [
          "docker compose down"
        ]
      }
    }
  }
  